# Component Documentation Generator Configuration

# Project Settings
PROJECT_NAME=component-docs
COMPONENTS_DIR=./src/components
OUTPUT_DIR=./docs

# Documentation Settings
INCLUDE_PRIVATE=false
INCLUDE_PROTECTED=true
VERBOSE_OUTPUT=false

# Format Settings
DEFAULT_FORMAT=json
ENABLE_MARKDOWN=true
ENABLE_HTML=true

# Parser Settings
TYPESCRIPT_ENABLED=true
JSX_ENABLED=true
PARSE_COMMENTS=true
PARSE_EXAMPLES=true

# Output Settings
PRETTY_PRINT=true
MAX_CODE_LENGTH=80
INCLUDE_LINE_NUMBERS=true

# Git Integration
GIT_INTEGRATION_ENABLED=true
TRACK_CHANGES=true
AUTO_COMMIT=false

# Validation Settings
STRICT_MODE=false
VALIDATE_EXAMPLES=true
CHECK_PROP_TYPES=true

# Cache Settings
ENABLE_CACHE=true
CACHE_DIR=./.cache
CACHE_TTL=3600

# Server Settings (for live preview)
PREVIEW_SERVER_PORT=3000
ENABLE_HOT_RELOAD=true

# Custom Templates
TEMPLATE_DIR=./templates
DEFAULT_TEMPLATE=default

# Plugin Settings
PLUGINS_ENABLED=true
PLUGIN_DIR=./plugins

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=info
ERROR_REPORTING=true